{
    "manifest_version": 3,
    "name": "Scrollnt",
    "version": "1.0.0",
    "description": "A behavior-aware system that progressively discourages excessive scrolling on short-form video platforms",
    "permissions": ["storage", "activeTab", "idle"],
    "host_permissions": ["*://*.tiktok.com/*"],
    "content_scripts": [
        {
            "matches": ["*://*.tiktok.com/*"],
            "js": ["challenges/memoryTest.js", "challenges/math.js", "challenges/typing.js", "challenges/captcha/mole.js", "challenges/index.js", "content.js"],
            "css": ["styles.css", "challenges/captcha/mole.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icons/icon.png",
            "48": "assets/icons/icon.png",
            "128": "assets/icons/icon.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon.png",
        "48": "assets/icons/icon.png",
        "128": "assets/icons/icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/mole/mole_sprite.png", "assets/mole/grass.jpeg"],
            "matches": ["*://*.tiktok.com/*"]
        }
    ]
}
